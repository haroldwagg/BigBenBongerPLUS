    <preference name="DisallowOverscroll" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />

    <preference name='phonegap-version' value='cli-9.0.0' />
    <preference name='pgb-builder-version' value='1' />

<!--
    <preference name="AndroidLaunchMode" value="singleInstance" />
-->

<preference name="android-minSdkVersion" value="14" />
<preference name="android-targetSdkVersion" value="28" />


    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="cordova-plugin-insomnia" version="4.1.0" source="npm" />
    <plugin name="cordova-plugin-background-mode" source="npm" />
    <plugin name="io.gvox.plugin.phonecalltrap" source="npm" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <gap:plugin platform="android" name="cordova-plugin-autostart" version="2.1.0" source="npm"/>


