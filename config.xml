<widget id="com.phonegap.bigbenplus" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Big Ben PLUS</name>
    <description>
        Does the Big Ben chimes and strikes. You'll think you're in London.  Also other clock choices.  Built on Big Ben Bonger original.
    </description>
    <author email="umikeapps@outlook.com" href="http://BigBenBonger.com">
        Uncle Mike
    </author>
    <content src="index.html" />
<!--
    <icon src="icon.png" />
